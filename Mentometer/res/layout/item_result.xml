<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/question_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Question:"
        android:textSize="12pt"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_descr_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/question_text_item"
        android:text="Question ..."
        android:textSize="12pt"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/answer_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question_descr_item"
        android:text="Answer:"
        android:textSize="12pt"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer_descr_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/answer_text_item"
        android:text="Answer ..."
        android:textSize="12pt" />

    <TextView
        android:id="@+id/correct_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/answer_descr_item"
        android:text="Correct answer:"
        android:textSize="12pt"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/correct_descr_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/correct_text_item"
        android:text="Correct answer  ..."
        android:textSize="12pt"
        android:textStyle="italic" />

</RelativeLayout>